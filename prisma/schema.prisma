generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/// This table contains check constraints and requires additional setup for migrations. Visit https://pris.ly/d/check-constraints for more info.
model auth_account {
  account_id    String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  user_type     String
  user_ref      String  @db.Uuid
  provider      String? @default("local")
  provider_sub  String?
  email         String
  password_hash String

  @@index([email], map: "idx_auth_account_email")
  @@index([user_ref, user_type], map: "idx_auth_account_user_ref")
}

model business {
  business_id   String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  tenant_id     String  @db.Uuid
  legal_name    String
  time_zone     String  @default("America/Argentina/Cordoba")
  cuit          String?
  contact_name  String?
  contact_phone String?
  address       String?
  logo_url      String?
  tenants       tenant  @relation(fields: [tenant_id], references: [tenant_id], onDelete: Cascade, onUpdate: NoAction)
}

model mp_config {
  mp_config_id         String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  tenant_id            String    @unique @db.Uuid // CRÍTICO: Un solo config por tenant
  mp_user_id           String? // Collector ID (user_id) del negocio en MP
  mp_access_token_enc  String? // Access Token Cifrado
  mp_refresh_token_enc String? // Refresh Token Cifrado
  mp_token_expiry      DateTime? @db.Timestamptz(6) // Fecha de expiración del access token
  
  
  max_installments     Int       @default(1) 
  
  excluded_payment_types Json?   @db.JsonB
  
  created_at           DateTime  @default(now()) @db.Timestamptz(6)

  // Relación con el Tenant. Se cambia 'tenants' a 'tenant' para claridad.
  tenant tenant @relation(fields: [tenant_id], references: [tenant_id], onDelete: Cascade, onUpdate: NoAction, map: "mp_config_tenant_id_fkey")

  @@map("mp_config")
}

model user_business {
  user_id     String        @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  tenant_id   String        @db.Uuid
  email       String        @unique
  name        String
  status      String?       @default("active")
  created_at  DateTime?     @default(now()) @db.Timestamptz(6)
  session_app session_app[]
  tenants     tenant        @relation(fields: [tenant_id], references: [tenant_id], onDelete: Cascade, onUpdate: NoAction)
  user_role   user_role[]

  @@index([email], map: "idx_user_business_email")
  @@index([tenant_id], map: "idx_user_business_tenant")
}

model user_owner {
  user_owner_id String        @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  tenant_id     String        @db.Uuid
  name          String
  email         String        @unique
  phone         String?
  active        Boolean?      @default(true)
  session_app   session_app[]
  tenants       tenant        @relation(fields: [tenant_id], references: [tenant_id], onDelete: Cascade, onUpdate: NoAction)

  @@index([email], map: "idx_user_owner_email")
  @@index([tenant_id], map: "idx_user_owner_tenant")
}

/// Tabla para banderas globales del sistema (ej: mantenimiento)
model system_flags {
  key        String   @id @db.VarChar(50)
  is_active  Boolean  @default(false)
  message    String?  @db.VarChar(255)
  updated_at DateTime @default(now()) @updatedAt
}

model category {
  category_id String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  tenant_id   String    @db.Uuid
  name        String
  description String?
  active      Boolean?  @default(true)
  image_key   String?
  tenant      tenant    @relation(fields: [tenant_id], references: [tenant_id], onDelete: Cascade, onUpdate: NoAction, map: "categories_tenant_id_fkey")
  product     product[]
}

model order {
  order_id       String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  tenant_id      String  @db.Uuid
  source_channel String? // WhatsApp, IG, Telegram, Web
  status         String  @default("draft") // Se hizo no nulo, siempre debe tener un estado

  // --- CAMPOS DE CLIENTE ---
  customer_name  String? // Nombre del cliente al finalizar el pedido
  customer_phone String? // Teléfono de contacto
  customer_email String? // Email opcional

  // --- CAMPOS DE ENTREGA ---
  delivery_method  String? // 'pickup' (Retiro en Local) o 'delivery' (A Domicilio)
  delivery_address Json? // Detalles de la dirección de entrega (calle, num, piso, etc.)

  // --- CAMPOS DE PAGO ---
  payment_method String? // 'mercadopago' o 'cash_on_delivery'
  shipping_cost  Decimal @default(0) @db.Decimal(12, 2) // Costo del envío

  // --- CAMPOS EXISTENTES ---
  aditional_note       String?  @db.Text
  total_amount         Decimal  @default(0) @db.Decimal(12, 2) // Incluye shipping_cost
  currency             String   @default("ARS")
  cart_json            Json? // Snapshot opcional de los items del carrito para auditoría
  mp_preference_id     String? // ID generado por MP al crear la preferencia
  mp_merchant_order_id String? // ID de Merchant Order de MP
  created_at           DateTime @default(now()) @db.Timestamptz(6)

  // Relaciones
  tenant     tenant       @relation(fields: [tenant_id], references: [tenant_id], onDelete: Cascade, onUpdate: NoAction, map: "orders_tenant_id_fkey")
  order_item order_item[]
  payment    payment[]

  // Índices para optimización y RLS
  @@index([tenant_id], map: "idx_orders_tenant_lookup")
  @@index([status], map: "idx_orders_status")
  @@index([tenant_id, created_at], map: "idx_orders_tenant_created_at_query") // Esencial para el listado del dashboard
  @@index([tenant_id, status], map: "idx_orders_tenant_status_query") // Útil para filtrar pedidos activos de un tenant
}

model order_item {
  order_item_id     String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  order_id          String   @db.Uuid
  product_id        String   @db.Uuid
  quantity          Int
  unit_price        Decimal  @db.Decimal(12, 2) // Precio unitario total (producto base + suma de todas las variantes)
  discount          Decimal? @default(0) @db.Decimal(12, 2)
  selected_variants Json? // Snapshot de variantes: [{variant_id, name, price_delta, sku}, ...]
  order             order    @relation(fields: [order_id], references: [order_id], onDelete: Cascade, onUpdate: NoAction, map: "order_items_order_id_fkey")
  product           product  @relation(fields: [product_id], references: [product_id], onDelete: Cascade, onUpdate: NoAction, map: "order_items_product_id_fkey")
}

model payment {
  payment_id    String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  tenant_id     String    @db.Uuid
  order_id      String    @db.Uuid
  mp_payment_id String?
  status        String?
  method        String?
  amount        Decimal?  @db.Decimal(12, 2)
  currency      String?
  raw_json      Json?
  created_at    DateTime? @default(now()) @db.Timestamptz(6)
  order         order     @relation(fields: [order_id], references: [order_id], onDelete: Cascade, onUpdate: NoAction, map: "payments_order_id_fkey")
  tenant        tenant    @relation(fields: [tenant_id], references: [tenant_id], onDelete: Cascade, onUpdate: NoAction, map: "payments_tenant_id_fkey")

  @@unique([mp_payment_id], map: "uq_payments_mp_payment_id") // Único para evitar duplicidad
  @@index([order_id], map: "idx_payments_order")
  @@index([tenant_id, order_id], map: "idx_payments_tenant_order_query") // Búsqueda de pagos de un pedido específico dentro del tenant
}

model product {
  product_id      String            @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  tenant_id       String            @db.Uuid
  category_id     String?           @db.Uuid
  name            String
  description     String?
  price           Decimal           @db.Decimal(12, 2)
  currency        String?           @default("ARS")
  stock           Int?              @default(0)
  image_url       String?
  visible         Boolean?          @default(true)
  created_at      DateTime?         @default(now()) @db.Timestamptz(6)
  order_item      order_item[]
  category        category?         @relation(fields: [category_id], references: [category_id], onUpdate: NoAction, map: "products_category_id_fkey")
  tenant          tenant            @relation(fields: [tenant_id], references: [tenant_id], onDelete: Cascade, onUpdate: NoAction, map: "products_tenant_id_fkey")
  product_variant product_variant[]

  @@index([category_id], map: "idx_products_category")
  @@index([tenant_id], map: "idx_products_tenant")
  @@index([visible], map: "idx_products_visible")
}

model product_variant {
  variant_id  String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  product_id  String   @db.Uuid
  name        String
  price_delta Decimal? @default(0) @db.Decimal(12, 2)
  sku         String?
  stock       Int?     @default(0)
  active      Boolean? @default(true)
  product     product  @relation(fields: [product_id], references: [product_id], onDelete: Cascade, onUpdate: NoAction, map: "product_variants_product_id_fkey")
}

model role {
  role_id     String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  tenant_id   String   @db.Uuid // <--- AGREGADO: Clave de aislamiento multi-tenant
  name        String
  description String?
  // CAMBIADO: Array de strings para almacenar permisos granulares (ej: ["product:read", "order:write"])
  permissions String[] @db.Text
  active      Boolean? @default(true)
  created_at  DateTime @default(now()) @db.Timestamptz(6)

  // Relaciones
  tenant    tenant      @relation(fields: [tenant_id], references: [tenant_id], onDelete: Cascade, onUpdate: NoAction)
  user_role user_role[]

  // Restricción única para el nombre del rol dentro del mismo tenant
  @@unique([tenant_id, name])
  // Índices
  @@index([tenant_id])
}

model session_app {
  session_id         String         @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  user_owner_id      String?        @db.Uuid
  user_id            String?        @db.Uuid
  tenant_id          String         @db.Uuid
  provider           String?        @db.VarChar(50)
  refresh_token_enc  String
  refresh_expires_at DateTime       @db.Timestamptz(6)
  created_at         DateTime       @default(now()) @db.Timestamptz(6)
  last_used_at       DateTime?      @db.Timestamptz(6)
  ip_address         String?        @db.VarChar(45)
  user_agent         String?
  tenant             tenant         @relation(fields: [tenant_id], references: [tenant_id], onDelete: Cascade, onUpdate: NoAction, map: "fk_tenant")
  user_business      user_business? @relation(fields: [user_id], references: [user_id], onDelete: Cascade, onUpdate: NoAction, map: "fk_user_business")
  user_owner         user_owner?    @relation(fields: [user_owner_id], references: [user_owner_id], onDelete: Cascade, onUpdate: NoAction, map: "fk_user_owner")

  @@index([last_used_at], map: "idx_session_last_used")
  @@index([refresh_expires_at], map: "idx_session_refresh_expires")
  @@index([tenant_id], map: "idx_session_tenant")
  @@index([user_id], map: "idx_session_user")
  @@index([user_owner_id], map: "idx_session_user_owner")
}

model tenant {
  tenant_id              String            @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name                   String
  slug                   String            @unique
  primary_color          String?
  secondary_color        String?
  custom_domain          String?
  currency               String?           @default("ARS")
  plan_status            String?           @default("trial")
  allow_cash_on_delivery Boolean?          @default(true) // Permite el pago en efectivo/local
  created_at             DateTime?         @default(now()) @db.Timestamptz(6)
  business               business[]
  category               category[]
  delivery_config        delivery_config[]
  mp_config              mp_config[]
  order                  order[]
  payment                payment[]
  product                product[]
  session_app            session_app[]
  user_business          user_business[]
  user_owner             user_owner[]
  roles                  role[]
  social_integrations     social_integration[]
  business_hours          business_hours[]

  @@index([slug], map: "idx_tenants_slug")
}

// Configuración de métodos de entrega por tenant
model delivery_config {
  delivery_config_id String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  tenant_id          String   @db.Uuid
  is_active          Boolean  @default(true)
  type               String // 'pickup' (retiro) o 'delivery' (envío)
  name               String? // Nombre amigable (ej: "Retiro en la sucursal de Palermo")
  description        String?
  base_rate          Decimal  @default(0) @db.Decimal(12, 2) // Tarifa base, puede ser 0
  settings_json      Json? // Configuración JSON para tarifas más complejas (zonas, radios, min/max)
  created_at         DateTime @default(now()) @db.Timestamptz(6)
  updated_at         DateTime @updatedAt @db.Timestamptz(6)

  // Relación
  tenant tenant @relation(fields: [tenant_id], references: [tenant_id], onDelete: Cascade, onUpdate: NoAction)

  // Índices para optimización y unicidad
  @@unique([tenant_id, type]) // Solo una configuración por tipo de entrega por tenant
  @@index([tenant_id])
  @@map("delivery_config")
}

model user_role {
  user_id       String        @db.Uuid
  role_id       String        @db.Uuid
  role          role          @relation(fields: [role_id], references: [role_id], onDelete: Cascade, onUpdate: NoAction, map: "user_roles_role_id_fkey")
  user_business user_business @relation(fields: [user_id], references: [user_id], onDelete: Cascade, onUpdate: NoAction, map: "user_roles_user_id_fkey")

  @@id([user_id, role_id])
}

model social_integration {
  id                      String   @id @default(dbgenerated("gen_random_uuid()")) @map("social_integration_id") @db.Uuid
  tenant_id               String   @db.Uuid
  channel                 String // 'whatsapp', 'instagram', 'telegram'
  
  // Credenciales cifradas - CRÍTICO: Deben almacenarse cifradas (e.g., con KMS)
  access_token_enc          String    
  refresh_token_enc         String? 
  
  // Identificadores específicos del proveedor (Meta Business App ID, WhatsApp Phone Number ID, etc.)
  external_id              String? // Por ejemplo, el WhatsApp Phone Number ID (esencial)
  
  status                  String   // 'connected', 'disconnected', 'error'
  raw_json                 Json?   // Payload completo de Meta/Telegram para debugging
  
  created_at               DateTime @default(now()) @db.Timestamptz(6)
  updated_at               DateTime @updatedAt @db.Timestamptz(6)

  // Relación con el Tenant
  tenant                  tenant   @relation(fields: [tenant_id], references: [tenant_id], onDelete: Cascade, onUpdate: NoAction)
  
  @@unique([tenant_id, channel]) // Solo una integración por canal por tenant
}

model business_hours {
  hour_id     String   @id @default(uuid())
  tenant_id   String   @db.Uuid
  day_of_week Int      @db.SmallInt // 0-6
  open_time   DateTime @db.Time // Prisma maneja TIME como Date object (solo hora)
  close_time  DateTime @db.Time

  tenant      tenant   @relation(fields: [tenant_id], references: [tenant_id])
}
